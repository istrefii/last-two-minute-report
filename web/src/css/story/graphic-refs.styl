.graphic__refs
	.graphic__chart
		max-width $col-width
		margin 0 auto
	table
		table-layout fixed
		.text
			width 7rem
			+mq('bp-2')
				width 10rem
		
		td
			display none
			&:nth-child(-n+2)
				display table-cell
			&.is-selected
				display table-cell
			+mq('bp-2')
				display table-cell
				
		th 
			text-transform uppercase
			font-size 0.75rem
			display none
			&:nth-child(-n+2)
				display table-cell
			+mq('bp-2')
				display table-cell
			&.number
				cursor pointer
				&:hover
					background-color $off-white
		th.is-selected
			display table-cell
			&:after
				display inline-block
				padding-left 0.25rem
				color $gray
				line-height 1
			&.ascending:after
				content '\025B4'
			&.descending:after
				content '\025BE'
		
		td.text
			font-size 0.75rem
			+mq('bp-2')
				font-size 0.85rem
		
	.swap
		text-align right
		margin-bottom 0.5rem
		+mq('bp-2')
			display none
	.button--swap
		font-size 0.7rem
		&:after
			display inline-block
			padding-left 0.25rem
			color $gray
			line-height 1
			content '\021BA'
			display inline