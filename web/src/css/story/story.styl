
body
	background #fff
	font-size 18px

main
	padding 0.75rem

a
	text-decoration none
	color $off-black
	border-bottom 1px dotted currentColor

p
	line-height 1.7
	margin 1rem 0

button
	padding 0.2rem 0.5rem
	border-radius 2px
	text-transform uppercase
	font-size 0.8rem
	letter-spacing 0.05em
	background-color $off-white
	border 1px solid $off-black
	transition background-color 200ms
	&:hover
		background-color $gray-light

.graphic
	position relative
	margin 3rem auto
	&__hed
		font-size 1.5rem
		// text-transform uppercase
		// letter-spacing 0.05em
	&__intro
		max-width $col-width
		margin 0 auto

.note
	max-width $col-width
	margin 0.25rem auto
	color $gray-dark
	font-size 0.8rem

.align-right
	text-align right
	
table 
	width 100%
	th
		font-size 0.8rem
		text-transform uppercase
		padding 0.3em 0.5em
		background-color #fff
	tr 
		background-color #eee
	td 
		font-size 0.85rem
		padding 0.3em 0.5em
		border 1px solid #fff
	.number
		text-align right
	.text
		text-align left

.travel
	max-width 25rem
	margin 3rem auto
	p 
		margin 0.25rem 0
		text-align center
	
.outro
	border-top 1px solid $gray-light
	max-width $col-width
	margin 0 auto
	p 
		font-size 0.8rem