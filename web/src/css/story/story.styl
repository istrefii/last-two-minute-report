fontify($whitney, $whitney-hash, 400, $sans, 400, 0.04em)
fontify($mercury, $mercury-hash, 400, $serif, 400, 0.04em)

body
	background #fff
	font-size 16px

a
	text-decoration none
	color $off-black
	border-bottom 1px dotted currentColor

p
	line-height 1.6
	margin 1rem 0

button
	padding 0.2rem 0.5rem
	border-radius 2px
	text-transform uppercase
	font-size 0.8rem
	letter-spacing 0.05em
	background-color $off-white
	border 1px solid $off-black
	transition background-color 200ms
	&:hover
		background-color $gray-light
.graphic
	margin-top 4rem
	&__hed
		font-size 1rem
		text-transform uppercase
	&__intro
		max-width 40rem
		margin 0 auto