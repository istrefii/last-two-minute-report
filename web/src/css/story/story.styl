fontify($ptSerif, $ptSerif-hash, 400, $serif, 400, 0.04em)
fontify($roboto, $roboto-hash, 400, $sans, 400, 0.04em)

body
	background #fff
	font-size 17px

a
	text-decoration none
	color $off-black
	border-bottom 1px dotted currentColor

p
	line-height 1.6
	margin 1rem 0

button
	padding 0.2rem 0.5rem
	border-radius 2px
	text-transform uppercase
	font-size 0.8rem
	letter-spacing 0.05em
	background-color $off-white
	border 1px solid $off-black
	transition background-color 200ms
	&:hover
		background-color $gray-light
.graphic
	margin-top 4rem
	&__hed
		font-size 1.5rem
		text-transform uppercase
		letter-spacing 0.05em
	&__intro
		max-width 40rem
		margin 0 auto

table 
	width 100%
	th
		font-size 0.8rem
		text-transform uppercase
		padding 0.3em 0.5em
		background-color #fff
	tr 
		background-color #eee
	td 
		font-size 0.85rem
		padding 0.3em 0.5em
		border 1px solid #fff
	.number
		text-align right
	.text
		text-align left