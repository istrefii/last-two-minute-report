.graphic__calls
	.graphic__chart
		max-width $col-width
		margin 0 auto
	table
		table-layout fixed
		.text
			width 15rem
		th 
			text-transform uppercase
			font-size 0.75rem
			&.number
				cursor pointer
				&:hover
					background-color $off-white
		th.is-selected
			&:after
				display inline-block
				padding-left 0.25rem
				color $gray
				line-height 1
			&.ascending:after
				content '\025B4'
			&.descending:after
				content '\025BE'
		
