.graphic__recent
	.graphic__chart
		max-width 55rem
		margin 0 auto
		height 300px
		overflow hidden
		position relative
		&.is-visible
			height auto
		&:after
			content ''
			display block
			width 100%
			position absolute
			left 0
			bottom 0rem
			height 2rem
			background-image linear-gradient(to bottom,rgba($primary,0),#fff 66%)
	
	.game
		padding 1rem 0 2rem 0
	.game__info
		text-align center
		margin-bottom 1rem
		p
			margin 0
			line-height 1
			text-align center
			font-size 0.85rem
			color $gray-dark
		
		.info__matchup
			text-align center
			height 100%
			overflow hidden
			display inline-block
			margin 0 auto
			span 
				display inline-block
				line-height 4rem
				veritcal-align middle
				float left
				font-size 0.85rem
	
		.info__team
			display inline-block
			margin 0 auto
			line-height 4rem
			border none
			float left
			img 
				width 4rem
				height 4rem
	.game__plays
		.td--committing, .td--disadvantaged
			span 
				font-size 0.65rem
				color $gray-dark
		.ic
			background-color $ic
			// color darken($ic, 60)
		.inc
			background-color $inc
			// color darken($inc, 60)
		.cc
			background-color $cc
			// color darken($cc, 60)
		.cnc 
			background-color $cnc
			// color darken($cnc, 60)
	
	.button--expand
		width 11rem
		display block
		margin 0 auto
		