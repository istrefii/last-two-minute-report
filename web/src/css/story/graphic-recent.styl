.graphic__recent
	max-width 50rem
	margin 0 auto
	.game__info
		display flex
		justify-content space-between
		margin-bottom 1rem
		p, a
			display inline-block
			margin 0
			line-height 1
	
	.game__plays
		width 100%
		th
			font-size 0.85rem
			padding 0.25em 0.125em
			background-color white
		tr 
			border-bottom 1px solid #fff
			background-color #eee
		td 
			font-size 0.85rem
			padding 0.25em
		.ic
			background-color #ed7886
		.inc
			background-color #fabcb2
		.cc
			background-color #abdda4
		.cnc 
			background-color #d5eec2