.graphic__location
	max-width 40rem
	margin 0 auto
	.chart__text
		display flex
		justify-content space-between
		p
			margin 0
	.chart__bars
		display flex
		position relative
	.chart__bar
		display inline-block
		height 2rem
		line-height 2rem
		padding 0 0.5rem
	.bar__home
		background-color $off-black
		color $off-white
		text-align left
	.bar__away
		background-color $off-white
		color $off-black
		text-align right
	.bar__mid
		position absolute
		top -25%
		left 50%
		height 3rem
		width 0px
		// margin-right 1px
		border-left 1px dashed $ic
	