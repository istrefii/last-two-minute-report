.intro
	margin 0 auto
	max-width $col-width
	&__hed
		text-align center
		text-transform uppercase
		line-height 1.1
		letter-spacing 0.05em
		margin 0.5rem auto 1em auto
		font-size 2rem
		max-width 25rem
		+mq('bp-3')
			max-width 35rem
			margin 1rem auto 3rem auto
			font-size 3rem
	&__daily
		text-align center
		display block
		margin 4rem auto 0 auto
		width 9rem
		color white
		text-transform uppercase
		line-height 1
		padding 0.4rem 0
		font-size 0.8rem
		letter-spacing 0.1em
		background-color $cc
	&__byline
		text-align center
	&__updated
		text-align center
		text-transform uppercase
		font-size 0.85rem
		color $gray
	&__dek
		span
			color darken($ic, 15)