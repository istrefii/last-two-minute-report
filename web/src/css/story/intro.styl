.intro
	margin 0 auto
	max-width $col-width
	&__hed
		text-align center
		text-transform uppercase
		line-height 1.1
		letter-spacing 0.05em
		margin 6rem auto 3rem auto
		font-size 2rem
		max-width 25rem
		+mq('bp-3')
			max-width 35rem
			margin 3rem auto
			font-size 3rem
	&__byline
		text-align center
	&__updated
		text-align center
		text-transform uppercase
		font-size 0.85rem
		color $gray
	&__dek
		span
			color darken($ic, 15)